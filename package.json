{
  "name": "leet-code",
  "version": "0.0.1",
  "description": "personal LeetCode solutions with JavaScript for study",
  "repository": "git@github.com:JounQin/LeetCode.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint . --max-warnings=10",
    "test": "jest"
  },
  "babel": {
    "presets": ["@babel/env"]
  },
  "eslintConfig": {
    "root": true,
    "extends": "1stg",
    "env": {
      "jest": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "lint-staged": {
    "*.js": ["eslint --max-warnings=10", "git add"],
    "*.{json,md}": ["prettier --write", "git add"]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.0",
    "@types/jest": "^24.0.15",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^22.4.3",
    "eslint": "^4.19.1",
    "eslint-config-1stg": "^4.1.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.0.2",
    "prettier": "^1.18.2"
  }
}
